<Window x:Class="BattleshipGame.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleshipGame"
        mc:Ignorable="d"
        Title="{Binding Name}"
        Height="450" Width="800"
        SnapsToDevicePixels="True"
        UseLayoutRounding="True">
    <Grid SnapsToDevicePixels="True" UseLayoutRounding="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="OwnFieldCanvas" Grid.Column="0" Grid.Row="0" Background="White" SnapsToDevicePixels="True" UseLayoutRounding="True"/>
        <Canvas x:Name="EnemyFieldCanvas" Grid.Column="1" Grid.Row="1" Background="White" SnapsToDevicePixels="True" UseLayoutRounding="True"/>
        <Button Grid.Column="2" Grid.Row="0" Content="Test" Click="Test_Click" />
    </Grid>
</Window>
